<div class="container mt-4 text-center">
    <h2>Upcoming Conventions</h2>
    <div class="d-flex justify-content-center">
        <div id="eventsCarousel" class="carousel slide" data-bs-ride="carousel" style="width: 900px;">
            <div class="carousel-inner">
                {{#each conventions}}
                    <div class="carousel-item {{#if @first}}active{{/if}}">
                        <div class="d-flex justify-content-center align-items-center" style="height: 300px; background-color: #ddd; border-radius: 10px;">
                            <img src="{{this.convention_image}}" class="d-block w-100" alt="{{this.name}}" style="object-fit: cover; height: 100%; border-radius: 10px;">
                        </div>
                        <div class="text-center mt-3">
                            <h5>{{this.name}}</h5>
                            <a href="/conventions/{{this.id}}" class="btn btn-dark">Learn More</a>
                        </div>
                    </div>
                {{/each}}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#eventsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#eventsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<div class="container mt-5">
  <h2 class="text-center mb-4">Other Events</h2>
  <div class="row">
    {{#each conventions}}
      <div class="col-md-4 mb-3">
        <div class="card" style="aspect-ratio: 1/1; overflow: hidden;">
          <div style="height: 66%; background-image: url('{{this.convention_image}}'); background-size: cover; background-position: center;"></div>
          <div style="height: 34%; background-color: #eaeaea;" class="d-flex flex-column justify-content-center align-items-center p-2">
            <h5 class="card-title mb-4">{{this.name}}</h5>
            <a href="/conventions/{{this.id}}" class="btn btn-dark">Learn More</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>