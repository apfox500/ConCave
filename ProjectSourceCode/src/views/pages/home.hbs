<div class="container mt-4 text-center position-relative">
    <h2>Upcoming Conventions</h2>
    <div class="d-flex justify-content-center">
        <div id="eventsCarousel" class="carousel slide" data-bs-ride="carousel" style="width: 900px;">
            <div class="carousel-inner">
                {{#each events}}
                    <div class="carousel-item {{#if @first}}active{{/if}}">
                        <div class="d-flex justify-content-center align-items-center" style="height: 300px; background-color: #ddd; border-radius: 10px;">
                            <h5>{{title}}</h5>
                        </div>
                        <div class="text-center mt-3">
                            <a href="{{link}}" class="btn btn-dark">Learn More</a>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    
    <!-- Repositioned carousel controls -->
    <button class="carousel-control-prev position-absolute top-50 start-0 translate-middle-y" 
            type="button" 
            data-bs-target="#eventsCarousel" 
            data-bs-slide="prev"
            style="left: -50px; width: 40px; height: 40px; background-color: rgba(0,0,0,0.5); border-radius: 50%;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next position-absolute top-50 end-0 translate-middle-y" 
            type="button" 
            data-bs-target="#eventsCarousel" 
            data-bs-slide="next"
            style="right: -50px; width: 40px; height: 40px; background-color: rgba(0,0,0,0.5); border-radius: 50%;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Other Events</h2>
    <div class="row">
        {{#each events}}
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{link}}" class="btn btn-dark">Learn More</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>