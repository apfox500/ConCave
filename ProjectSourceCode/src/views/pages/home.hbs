                    alert('Convention added successfully!');
                    const conventionCard = document.createElement('div');
                    conventionCard.classList.add('col-md-3', 'mb-4');
                    conventionCard.innerHTML = `
                        <div class="card">
                            <img src="https://via.placeholder.com/300" class="card-img-top" alt="Convention placeholder">
                            <div class="card-body">
                                <h5 class="card-title">${name}</h5>
                                <a href="#" class="btn btn-primary">Learn More</a>
                            </div>
                        </div>
                    `;

                    // Add it to the convention list
                    document.getElementById('conventions-list').appendChild(conventionCard);

